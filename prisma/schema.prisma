generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       Int      @id @default(autoincrement())
  email     String   @unique
  password String
  name      String?
  lastName String?
  money     Decimal  @default(0)
  currency  String   @default("USD")
  birthDay     DateTime
  games  Game[]
  purchases Purchase[]
}

model Game {
  id        Int      @id @default(autoincrement())
  title     String
  description String
  genre     String
  price    Decimal
  currency  String
  gameUrl       String
  isGiftable Boolean   @default(false)
  purchases Purchase[]
  userId    Int
  user      User[]     //@relation(fields: [userId], references: [id])
  gameCodes GameCode[]
}

model Purchase {
  id        Int      @id @default(autoincrement())
  userId    Int
  gameId    Int
  purchaseDate DateTime @default(now())
  user      User[]     //@relation(fields: [userId], references: [id])
  game      Game[]     //@relation(fields: [gameId], references: [id])
}


model CurrencyRate {
  id        Int      @id @default(autoincrement())
  fromCurrency String
  toCurrency   String
  rate      Decimal
  lastUpdated DateTime @default(now())
}

model GameCode {
  id        Int      @id @default(autoincrement())
  code      String   @unique
  gameId    Int
  isRedeemed Boolean  @default(false)
  game      Game    @relation(fields: [gameId], references: [id]) 
}
